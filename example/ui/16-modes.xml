<UI>
    <var.TextFormat var="fmt1" font="'Tahoma'" size="22" color="0xFFFF00" />
    <var.TextFormat var="fmt2" font="'Tahoma'" size="12" color="0xFF0000" />

    <Bitmap var="bmp1" src="'img/sd.jpg'" />
    <TextField var="txt1" border="true" borderColor="0xFF0000" x="bmp1.width" autoSize="TextFieldAutoSize.LEFT" />
    <TextField var="txt2" border="true" borderColor="0xFF0000" x="bmp1.width + 200" />
    <case>
        <M1 default="true">
            <this x="20" />
            <in var="txt1,txt2" y="100" type="DYNAMIC" setTextFormat="fmt1" />
            <txt1 text="'txt1 in mode 1'" />
            <txt2 text="'txt2 in mode 1'" />
            <bmp1 scaleX="0.5" scaleY="0.5" />
        </M1>
        <M2>
            <this x="40"/>
            <in var="txt1,txt2" y="0" type="INPUT" defaultTextFormat="fmt2" setTextFormat="fmt2" />
            <txt1 text="'txt1 in mode 2'" />
            <txt2 text="'txt2 in mode 2'" />
            <bmp1 scaleX="1" scaleY="1" />
        </M2>
    </case>
</UI>