<UI var.largeFmt="new TextFormat('Tahoma', 22, 0xFF0000)">
    <Bitmap var="#bmp1" new=":Assets.getBitmapData('img/sd.jpg')" />
    <Bitmap bitmapData="bmp1.bitmapData" this.alignRight="" this.alignBottom="15" />
    <TextField var="#txt1" text="'Hi &amp; Layout!'" width="200" height="33">
        <this. setTextFormat="largeFmt" rightOf="bmp1, PADDING" />
    </TextField>
    <TextField text="'Hi Layout2!'" width="200">
        <this. setTextFormat="largeFmt" below="txt1" alignWith="txt1,LEFT" />
    </TextField>
</UI>